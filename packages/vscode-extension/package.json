{
  "name": "cmux-vscode-extension",
  "displayName": "cmux Extension",
  "description": "cmux VS Code Extension",
  "version": "0.0.1",
  "type": "module",
  "publisher": "cmux",
  "repository": {
    "type": "git",
    "url": "https://github.com/lawrencecchen/cmux"
  },
  "engines": {
    "vscode": "^1.101.2"
  },
  "extensionKind": [
    "workspace"
  ],
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onTerminalProfile:cmux.terminal"
  ],
  "main": "./out/extension.cjs",
  "contributes": {
    "commands": [
      {
        "command": "cmux.helloWorld",
        "title": "cmux: Hello World"
      },
      {
        "command": "cmux.run",
        "title": "cmux: Run"
      },
      {
        "command": "cmux.showOutput",
        "title": "cmux: Show Output"
      },
      {
        "command": "cmux.git.openAllChangesAgainstBase",
        "title": "cmux: Open All Changes vs Base"
      },
      {
        "command": "cmux.newTerminal",
        "title": "cmux: New Terminal"
      },
      {
        "command": "cmux.listSessions",
        "title": "cmux: List PTY Sessions"
      },
      {
        "command": "cmux.renameTerminal",
        "title": "cmux: Rename Terminal"
      }
    ],
    "terminal": {
      "profiles": [
        {
          "id": "cmux.terminal",
          "title": "cmux"
        }
      ]
    },
    "configuration": {
      "title": "cmux",
      "properties": {
        "cmux.ptyServerUrl": {
          "type": "string",
          "default": "http://localhost:39383",
          "description": "URL of the cmux-pty server inside the sandbox"
        },
        "cmux.defaultShell": {
          "type": "string",
          "default": "/bin/zsh",
          "description": "Default shell for new terminals"
        }
      }
    },
    "configurationDefaults": {
      "terminal.integrated.defaultProfile.linux": "cmux"
    }
  },
  "scripts": {
    "vscode:prepublish": "bun run compile-bun",
    "compile": "bun run compile-bun",
    "compile-bun": "bun build src/extension.ts --target node --outfile ./out/extension.cjs --external vscode --minify --format cjs",
    "compile-tsc": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint && npm run compile-tsc",
    "lint": "eslint src",
    "test:todo": "echo 'TODO: enable VS Code tests later'",
    "package": "bunx @vscode/vsce package --allow-missing-repository --no-dependencies --allow-star-activation",
    "typecheck": "bunx tsgo --noEmit -p tsconfig.json"
  },
  "devDependencies": {
    "@cmux/shared": "workspace:*",
    "@types/mocha": "^10.0.6",
    "@types/node": "^24.9.1",
    "@types/vscode": "^1.73.0",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.8",
    "@vscode/vsce": "^3.2.1",
    "ajv": "^8.17.1",
    "eslint": "^9.31.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "socket.io-client": "^4.6.1"
  }
}
