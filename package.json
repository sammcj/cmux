{
  "name": "cmux",
  "version": "0.0.0",
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@t3-oss/env-core": "^0.13.8",
    "@types/node-forge": "^1.3.14",
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.43.0",
    "eslint": "^9.34.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.6.2",
    "typescript": "5.9.3",
    "typescript-eslint": "^8.43.0"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "overrides": {
    "@sentry/browser": "10.27.0",
    "@sentry/core": "10.27.0",
    "@sentry/types": "10.27.0",
    "node-abi": "^4.14.0",
    "react": "^19.2.2",
    "react-dom": "^19.2.2",
    "monaco-editor": "^0.53.0",
    "convex": "1.29.3"
  },
  "private": true,
  "scripts": {
    "clean": "bash scripts/clean.sh",
    "clean:node_modules": "bash scripts/clean.sh",
    "precheck": "bun run generate-openapi-client",
    "check": "bun run scripts/check.ts",
    "lint": "bun run scripts/lint.ts",
    "test": "bun run scripts/test.ts",
    "sync-ide-deps": "bun run scripts/sync-ide-deps.ts",
    "bump-ide-deps": "bun run scripts/bump-ide-deps.ts",
    "typecheck": "run-p typecheck:*",
    "typecheck:client": "cd apps/client && bun run typecheck",
    "typecheck:scripts": "cd scripts && bun run typecheck",
    "typecheck:server": "cd apps/server && bun run typecheck",
    "typecheck:shared": "cd packages/shared && bun run typecheck",
    "typecheck:worker": "cd apps/worker && bun run typecheck",
    "typecheck:vscode-extension": "cd packages/vscode-extension && bun run typecheck",
    "typecheck:convex": "cd packages/convex && bun run typecheck",
    "typecheck:cmux": "cd packages/cmux && bun run typecheck",
    "typecheck:morphcloud-openapi-client": "cd packages/morphcloud-openapi-client && bun run typecheck",
    "typecheck:www-openapi-client": "cd packages/www-openapi-client && bun run typecheck",
    "typecheck:www": "cd apps/www && bun run typecheck",
    "gen": "run-p generate-openapi-client generate-morphcloud-openapi-client generate-routes",
    "generate-routes": "cd apps/client && bun run generate-routes",
    "generate-openapi-client": "cd apps/www && bun run generate-openapi-client",
    "generate-morphcloud-openapi-client": "cd packages/morphcloud-openapi-client && bun run generate",
    "build:mac-arm64-prod": "bash scripts/build-prod-mac-arm64.sh",
    "convex:deploy:prod": "(cd packages/convex && bun run deploy:prod)",
    "convex:setup": "bun run --env-file .env --cwd packages/convex setup"
  },
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*",
    "scripts"
  ],
  "dependencies": {
    "@novnc/novnc": "1.7.0-beta",
    "@sentry/browser": "10.27.0",
    "@sentry/core": "10.27.0",
    "@sentry/electron": "7.3.0",
    "@sentry/nextjs": "10.27.0",
    "@sentry/node": "^10.29.0",
    "@sentry/react": "10.27.0",
    "@sentry/types": "10.27.0",
    "@sentry/vite-plugin": "4.6.1",
    "ajv": "6.12.6",
    "ajv-keywords": "3.5.2",
    "morphcloud": "^0.0.20",
    "node-forge": "^1.3.1"
  }
}
