#!/bin/sh
# Wrapper script - actual binary is copied by postinstall
DIR="$(dirname "$0")"
if [ -f "$DIR/cmux2.bin" ]; then
  exec "$DIR/cmux2.bin" "$@"
elif [ -f "$DIR/../lib/cmux2" ]; then
  exec "$DIR/../lib/cmux2" "$@"
else
  echo "cmux2: Binary not found. Try reinstalling: npm install -g cmux2"
  exit 1
fi
